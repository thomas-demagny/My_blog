{% extends 'layout/layout.html.twig' %}

{% block content %}
    <!-- Page Content -->
    <div class="blog_page container">

        <div class="row">
            <!-- Blog Entries Column -->
            <div class="offset-2 col-md-8 offset-2">
                <h1 class="my-4 text-center">Les derniers articles</h1>
                <!-- Blog Post -->
                {% for article in articles %}
                    <div class="card mb-4">
                        <div class="card-body text-md-left">
                            <a href="../public/?id={{ article.id }}&access=article!read">
                                <h2 class="card-title">{{ article.title }}</h2>
                            </a>
                            <h3 class="lead">{{ article.chapo }}</h3>
                        </div>
                        <div class="card-footer text-muted text-md-left">
                            Edité le {{ article.dte | date ('d-m-Y à H:i') }} par {{ article.author }} .
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}






