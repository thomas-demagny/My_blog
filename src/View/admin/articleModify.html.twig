{% extends 'layout/layout.html.twig' %}

{% block content %}


    <div class="container">
        <form name="modify" method="post" enctype="multipart/form-data"
              action="../public/?id={{ article.id }}&access=article!update">
            <div class="form-group">
                <label for="title"
                       class="col-form-label">Titre:</label>
                <input type="text" class="form-control" id="title" name="title" value="{{ article.title }}">
            </div>
            <div class="form-group">
                <label for="chapo"
                       class="col-form-label">Ch√¢po:</label>
                <input type="text" name="chapo" id="chapo" class="form-control" value="{{ article.chapo }}">
            </div>
            <div class="form-group">
                <label for="content"
                       class="col-form-label">Article:</label>
                <textarea class="form-control" id="content"
                          name="content">{{ article.content }}</textarea>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-secondary">Annuler</button>
                <button class="btn btn-primary" type="submit">Valider</button>
            </div>
        </form>
    </div>
{% endblock %}






