{% extends 'layout/layout.html.twig' %}

{% block content %}
    <div class="signin_page container mt-2 mb-4">
        <div class="col-sm-8 ml-auto mr-auto">
            <ul class="nav nav-pills nav-fill mb-1" id="pills-tab" role="tablist">
                <li class="nav-item"><a class="nav-link {% if info is not defined %}active{% endif %}"
                                        id="pills-signin-tab" data-toggle="pill" href="#pills-signin" role="tab"
                                        aria-controls="pills-signin"
                                        aria-selected="{% if info is not defined %}true{% else %}false{% endif %}">Se
                        connecter</a></li>
                <li class="nav-item"><a class="nav-link {% if info is defined %}active{% endif %}" id="pills-signup-tab"
                                        data-toggle="pill" href="#pills-signup" role="tab" aria-controls="pills-signup"
                                        aria-selected="{% if info is defined %}true{% else %}false{% endif %}">S'enregistrer</a>
                </li>
            </ul>
            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade {% if info is not defined %}show active{% endif %}" id="pills-signin"
                     role="tabpanel" aria-labelledby="pills-signin-tab">
                    <div class="col-sm-12 border border-primary shadow rounded pt-2">

                        <form method="post" name="signinForm" enctype="multipart/form-data"
                              action="../public/?access=user!signin">
                            <div class="form-group">
                                <label class="font-weight-bold">Pseudo <span class="text-danger">*</span></label>
                                <input type="text" name="username" id="email" class="form-control"
                                       placeholder="ex: Super user" required>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">Mot de passe <span class="text-danger">*</span></label>
                                <input type="password" name="password" id="password" class="form-control"
                                       placeholder="***********" required>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col">
                                        <label><input type="checkbox" name="condition" id="condition"> Se souvenir de
                                            moi.</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" value="Se connecter" class="btn btn-secondary col-4">
                            </div>
                        </form>
                    </div>
                </div>
                <div class="tab-pane fade {% if info is defined %}show active{% endif %}" id="pills-signup"
                     role="tabpanel" aria-labelledby="pills-signup-tab">
                    <div class="col-sm-12 border border-primary shadow rounded pt-4">
                        <div class="text-center"><img src="../public/images/Creative-Tail-Animal-panda.svg.png"
                                                      class="rounded-circle border p-1" alt="un panda"></div>
                        <form method="post" id="signupForm" enctype="multipart/form-data"
                              action="../public/?access=user!signup">
                            <div class="form-group">
                                <label class="font-weight-bold">Prénom<span class="text-danger">*</span></label>
                                <input type="text" name="signupfirstname" id="signupfirstname" class="form-control"
                                       placeholder="Votre prénom" value="{{ info.firstname }}" required>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">Nom <span class="text-danger">*</span></label>
                                <input type="text" name="signupsurname" id="signupsurname" class="form-control"
                                       placeholder="Votre nom" value="{{ info.surname }}" required>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">Nom d'utilisateur <span
                                            class="text-danger">*</span></label>
                                <input type="text" name="signupusername" id="signupusername" class="form-control"
                                       placeholder="Choississez votre nom d'utilisateur" value="{{ info.username }}"
                                       required>
                                <div class="text-danger"><em>Il vous servira pour vous connecter par la suite !</em>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">Email <span class="text-danger">*</span></label>
                                <input type="email" name="signupemail" id="signupemail" class="form-control"
                                       placeholder="Entrez votre adresse mail" value="{{ info.email }}" required>
                            </div>

                            <div class="form-group">
                                <label class="font-weight-bold">Mot de passe <span class="text-danger">*</span></label>
                                <input type="password" name="signuppassword" class="form-control"
                                       placeholder="***********" required>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">Confirmez votre mot de passe <span
                                            class="text-danger">*</span></label>
                                <input type="password" name="confirmpassword" id="confirmpassword" class="form-control"
                                       placeholder="***********" required>
                            </div>
                            <div class="form-group">
                                <input type="submit" name="signupsubmit" value="S'enregistrer"
                                       class="btn btn-block btn-secondary col-4">
                            </div>
                            <p>Tous les champs marqués d'un <span class="text-danger">*</span> sont obligatoires</p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


